{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",  // Asume que el código fuente está en "src"
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
