{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",           // La raíz del código fuente ahora es `src`
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "vitest"]
  },
  "include": [
    "src/**/*.ts",               // Incluye todo dentro de `src`
    "config/**/*.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "models/**/*.ts",
    "prisma/**/*.ts",
    "routes/**/*.ts",
    "uploads/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
